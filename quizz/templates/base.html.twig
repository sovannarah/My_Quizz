<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<header class="navbar navbar-dark bg-dark text-light mb-5">
    <h1>
        <a class="nav-link" href="{{ path('home') }}">My Quizz</a>
    </h1>
    <ul class="d-flex nav-bar nav">
        <li class="nav-item">
            {% if not app.user %}
                <a class="nav-link" href="{{ path('user_register') }}">Inscription</a>
            {% else %}
                <a class="nav-link" href="{{ path('user_account') }}">Mon Compte</a>
            {% endif %}
        </li>
        {% if not app.user %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_login') }}">Connexion</a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_logout') }}">Deconnexion</a>
            </li>
        {% endif %}
    </ul>
</header>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
